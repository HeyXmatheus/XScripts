-- Carregar biblioteca
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Aviso ao executar
Fluent:Notify({ Title = "Executado!", Content = "Executando com sucesso" })

local Window = Fluent:CreateWindow({
    Title = "XScript escape do Cowboy ü§† | Vers√£o 1.0.0", -- T√≠tulo atualizado
    TabWidth = 160,
    Size = UDim2.fromOffset(390, 300),
    Theme = "Amethyst"
})

local Tabs = {
    autoFarm = Window:AddTab({ Title = "Auto Farm", Icon = "map" }) -- Aba renomeada para "Auto Farm"
}

-- Vari√°veis de controle
local teleporting = false -- Estado do alternador
local currentSpawnIndex = 1 -- √çndice do spawn atual

-- Fun√ß√£o para teleportar o jogador entre os spawns
local function teleportToNextSpawn()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()

    -- Teleportar para o spawn atual
    local spawn = workspace.LocalObjects.PlayerSpawns["s" .. tostring(currentSpawnIndex)].go
    if spawn then
        character:MoveTo(spawn.Position) -- Move o personagem para a posi√ß√£o do spawn
        currentSpawnIndex = currentSpawnIndex + 1 -- Avan√ßa para o pr√≥ximo spawn
        
        -- Para a teleporta√ß√£o se atingir o spawn s20
        if currentSpawnIndex > 20 then
            teleporting = false -- Para o teleport
            print("Teleporta√ß√£o conclu√≠da ao atingir o spawn s20.")
        end
    end
end

-- Alternador para ativar/desativar o teleport
local Toggle = Tabs.autoFarm:AddToggle("AutoFarmToggle", 
{
    Title = "Auto Zerar", 
    Description = "Auto Final.",
    Default = false, -- Esse "," √© necess√°rio em qualquer situa√ß√£o 
    Callback = function(state)
        teleporting = state
        if teleporting then
            print("Toggle On") -- Mensagem de ativa√ß√£o
            while teleporting do
                teleportToNextSpawn() -- Teleportar para o pr√≥ximo spawn
                wait(1) -- Espera 1 segundo antes de teleportar novamente
            end
        else
            print("Toggle Off") -- Mensagem de desativa√ß√£o
        end
    end 
})

-- Mostrar a janela da interface
Window:ShowWindow()