local Window = Fluent:CreateWindow({
    Title = "XScript Escape Sr.Policial Sirin red üëÆüö®| Vers√£o 1.0.0",
    TabWidth = 160,
    Size = UDim2.fromOffset(390, 300),
    Theme = "Amethyst"
})

local Tabs = {
    autoFarm = Window:AddTab({ Title = "Auto Farm", Icon = "map" })
}

-- Vari√°veis de controle
local teleporting = false -- Estado do alternador
local currentSpawnIndex = 1 -- √çndice do spawn atual

-- Fun√ß√£o para teleportar o jogador entre os spawns
local function teleportToNextSpawn()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()

    -- Teleportar para o spawn atual
    local spawn = workspace.StartModel.PlayerSpawns["m" .. tostring(currentSpawnIndex)].go
    if spawn then
        character:MoveTo(spawn.Position) -- Move o personagem para a posi√ß√£o do spawn
        currentSpawnIndex = currentSpawnIndex + 1 -- Avan√ßa para o pr√≥ximo spawn
        
        -- Para a teleporta√ß√£o se atingir o √∫ltimo spawn (m22)
        if currentSpawnIndex > 22 then
            teleporting = false -- Para o teleport
            print("Teleporta√ß√£o conclu√≠da ao atingir o spawn m22.")
        end
    else
        teleporting = false -- Para o teleport se o spawn n√£o existir
        print("Spawn n√£o encontrado: " .. tostring(currentSpawnIndex))
    end
end

-- Alternador para ativar/desativar o teleport
local Toggle = Tabs.autoFarm:AddToggle("AutoFarmToggle", 
{
    Title = "Auto Zerar", 
    Description = "Auto Final.",
    Default = false, 
    Callback = function(state)
        teleporting = state
        if teleporting then
            print("Toggle On") -- Mensagem de ativa√ß√£o
            while teleporting do
                teleportToNextSpawn() -- Teleportar para o pr√≥ximo spawn
                wait(0.4) -- Espera 0.4 segundos entre teletransportes
            end
        else
            print("Toggle Off") -- Mensagem de desativa√ß√£o
        end
    end 
})

-- Fun√ß√£o para teleportar para m22
local function teleportToM22()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local spawnM22 = workspace.StartModel.PlayerSpawns.m22.go
    if spawnM22 then
        character:MoveTo(spawnM22.Position)
        print("Teleportado para m22.")
    else
        print("Spawn m22 n√£o encontrado.")
    end
end

-- Bot√£o para zerar o bypass
local Button = Tabs.autoFarm:AddButton({
    Title = "Zerar Bypass",
    Description = "Teleporta para O fim Bypass",
    Callback = function()
        teleportToM22()
    end
})

-- Mostrar a janela da interface
