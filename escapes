-- Carregar biblioteca
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Aviso ao executar
Fluent:Notify({ Title = "Executado!", Content = "Executando com sucesso" })

local Window = Fluent:CreateWindow({
    Title = "XScript escapes 🔥 | Versão 1.0.0",
    TabWidth = 160,
    Size = UDim2.fromOffset(390, 300),
    Theme = "dark"
})

local Tabs = {
    scripts = Window:AddTab({ Title = "obbys", Icon = "user" }),
}

-- Função para fechar a interface
local function closeInterface()
    Window:Destroy() -- ou Window.Visible = false, dependendo da sua implementação
end

-- Botões
Tabs.scripts:AddButton({
    Title = "escape da professora", 
    Callback = function() 
        loadstring(game:HttpGet('https://raw.githubusercontent.com/HeyXmatheus/XScripts/refs/heads/main/escapeProf'))()
        closeInterface() -- Fecha a interface após executar o script
    end
})

Tabs.scripts:AddButton({
    Title = "escape do Sr Funny", 
    Callback = function() 
        loadstring(game:HttpGet('https://raw.githubusercontent.com/HeyXmatheus/XScripts/refs/heads/main/escapeSrFunni'))()
        closeInterface() -- Fecha a interface após executar o script
    end
})

Tabs.scripts:AddButton({
    Title = "Escape do Cozinheiro", 
    Callback = function() 
        loadstring(game:HttpGet('https://raw.githubusercontent.com/HeyXmatheus/XScripts/refs/heads/main/escapePizza'))()
        closeInterface() -- Fecha a interface após executar o script
    end 
})

-- Fim do código