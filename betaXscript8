-- Função para verificar se o jogador pode executar o script
local blockedPlayers = {1111, 71828} -- IDs dos jogadores bloqueados
local function isBlocked(userId)
    for _, id in pairs(blockedPlayers) do
        if userId == id then
            return true
        end
    end
    return false
end

-- Função para verificar se o jogador está na HR (high rank)
local hrRanks = {"HighRank", "Owner", "Admin"} -- Definir os ranks de HR
local function isInHR(player)
    local rank = player:GetRoleInGroup(1234567) -- Coloque o ID do grupo
    for _, r in pairs(hrRanks) do
        if rank == r then
            return true
        end
    end
    return false
end

-- Verificar se o executor é o Eclipse
local function isUsingEclipse()
    local executorName = getexecutorname() -- Substitua pela função correta se necessário
    return executorName and executorName:lower() == "eclipse"
end

-- Checar se o jogador é bloqueado ou está na HR
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

if isBlocked(LocalPlayer.UserId) or isInHR(LocalPlayer) then
    LocalPlayer:Kick("Você não tem permissão para executar este script (você está banido do XScript universal). Entre no https://discord.gg/qsYR297DR2 e faça um pedido de desban.")
    return
end

-- Verificar se o jogador está usando o executor Eclipse
if not isUsingEclipse() then
    LocalPlayer:Kick("Ops, o XScript agora é original do executor Eclipse. Baixe o executor Eclipse para executar o XScript.")
    return
end

-- Função para mostrar a tela de carregamento
local function showLoadingScreen()
    -- Criar o frame de carregamento
    local loadingFrame = Instance.new("ScreenGui")
    loadingFrame.Name = "LoadingScreen"
    loadingFrame.Parent = game.CoreGui -- Adiciona ao CoreGui

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.6, 0, 0.4, 0) -- Tamanho ajustado do fundo (não ocupa a tela toda)
    frame.Position = UDim2.new(0.2, 0, 0.3, 0) -- Centralizado sem ocupar a tela toda
    frame.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Vermelho
    frame.BackgroundTransparency = 0.2 -- Levemente transparente
    frame.Parent = loadingFrame

    -- Criar o texto de carregamento
    local loadingText = Instance.new("TextLabel")
    loadingText.Size = UDim2.new(1, -20, 0.3, 0) -- Ajusta a altura e adiciona margem
    loadingText.Position = UDim2.new(0, 10, 0.35, 0) -- Centraliza dentro do frame
    loadingText.BackgroundTransparency = 1
    loadingText.Text = "XSCRIPT ECLIPSE CARREGANDO..."
    loadingText.TextColor3 = Color3.fromRGB(255, 255, 255) -- Branco
    loadingText.TextScaled = true -- Ajusta o tamanho do texto
    loadingText.TextWrapped = true -- Permite quebra de linha
    loadingText.TextStrokeTransparency = 0.7 -- Suaviza a borda do texto
    loadingText.TextStrokeColor3 = Color3.fromRGB(50, 50, 50) -- Cor da borda suave
    loadingText.Parent = frame
end

local function hideLoadingScreen()
    local loadingScreen = game.CoreGui:FindFirstChild("LoadingScreen")
    if loadingScreen then
        loadingScreen:Destroy() -- Remove a tela de carregamento
    end
end

-- Exemplo de uso da tela de carregamento
showLoadingScreen() -- Mostra a tela de carregamento

-- Simular um tempo de carregamento mais longo
wait(8) -- Carregamento por 8 segundos

hideLoadingScreen() -- Esconde a tela de carregamento

-- Executar o script após o carregamento
loadstring(game:HttpGet('https://raw.githubusercontent.com/HeyXmatheus/XScripts/refs/heads/main/betaXscript8'))()