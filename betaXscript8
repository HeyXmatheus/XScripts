-- Verificar se o jogador pode executar o script
local blockedPlayers = {1111, 71828} -- IDs dos jogadores bloqueados
local function isBlocked(userId)
    for _, id in pairs(blockedPlayers) do
        if userId == id then
            return true
        end
    end
    return false
end

-- Fun√ß√£o para verificar se o jogador est√° na HR (high rank)
local hrRanks = {"HighRank", "Owner", "Admin"} -- Definir os ranks de HR
local function isInHR(player)
    local rank = player:GetRoleInGroup(1234567) -- Coloque o ID do grupo
    for _, r in pairs(hrRanks) do
        if rank == r then
            return true
        end
    end
    return false
end

-- Verificar se o executor √© o Eclipse
local function isUsingEclipse()
    local executorName = getexecutorname() -- Substitua pela fun√ß√£o correta se necess√°rio
    return executorName and executorName:lower() == "eclipse"
end

-- Checar se o jogador √© bloqueado ou est√° na HR
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

if isBlocked(LocalPlayer.UserId) or isInHR(LocalPlayer) then
    LocalPlayer:Kick("Voc√™ n√£o tem permiss√£o para executar este script (voc√™ est√° banido do XScript universal). Entre no https://discord.gg/qsYR297DR2 e fa√ßa um pedido de desban.")
    return
end

-- Verificar se o jogador est√° usando o executor Eclipse
if not isUsingEclipse() then
    LocalPlayer:Kick("Ops, o XScript agora √© original do executor Eclipse. abaixe o executor eclipse para executar o XScript.")
    return
end

-- Carregar biblioteca Fluent
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Aviso ao executar
Fluent:Notify({ Title = "Executado!", Content = "Executando com sucesso" })

-- Criar janela principal
local Window = Fluent:CreateWindow({
    Title = "XSCRIPT | ECLIPSE ‚Ä¢ Vers√£o 2.0.0",
    TabWidth = 160,
    Size = UDim2.fromOffset(390, 300),
    Theme = "dark"
})

-- Fun√ß√£o para fechar a interface
local function closeInterface()
    Window:Destroy() -- Destr√≥i a janela, fechando a interface
end

local Tabs = {
    scripts = Window:AddTab({ Title = "Xscripts Eclipse", Icon = "user" }),
}

-- Bot√µes
Tabs.scripts:AddButton({
    Title = "XScript ECLIPSE Eua üá∫üá∏", 
    Callback = function() 
        loadstring(game:HttpGet('https://raw.githubusercontent.com/HeyXmatheus/XScripts/refs/heads/main/MenuEua'))()
        closeInterface() -- Fecha a interface ap√≥s executar o script
    end
})

Tabs.scripts:AddButton({
