-- Carregar biblioteca
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Aviso ao executar
Fluent:Notify({ Title = "executado!", Content = "executando com sucesso" })
Fluent:Notify({ Title = "Servidor XScripts oficial discord!", Content = "https://discord.gg/qsYR297DR2" })

local Window = Fluent:CreateWindow({
    Title = "XScript [UPD] Eat Slimes to Grow HUGE üî• | Vers√£o 1.0.0 ",
    TabWidth = 160, 
    Size = UDim2.fromOffset(580, 460), 
    Theme = "Amethyst"
})

local Tabs = {
    Tabinfo = Window:AddTab({ Title = "Tab Info" }),
    autofarms = Window:AddTab({ Title = "Auto Farms", Icon = "leaf" }) -- Nova aba "Auto Farms"
}

-- Vari√°vel para o modo invenc√≠vel
local godMode = false

-- Fun√ß√£o para ativar o God Mode (invenc√≠vel)
local function enableGodMode()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if character then
        local humanoid = character:FindFirstChild("Humanoid")
        if humanoid then
            humanoid.MaxHealth = math.huge -- Sa√∫de infinita
            humanoid.Health = math.huge
        end
    end
end

-- Fun√ß√£o para desativar o God Mode
local function disableGodMode()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if character then
        local humanoid = character:FindFirstChild("Humanoid")
        if humanoid then
            humanoid.MaxHealth = 100 -- Voltar para o valor padr√£o
            humanoid.Health = humanoid.MaxHealth
        end
    end
end

-- Alternador para coletar blobs com o nome "10" e Giftbox
local autoCollectItems = false
local function moveToItems()
    while autoCollectItems do
        wait(1) -- Aumentar o intervalo de espera geral para evitar detec√ß√£o
        enableGodMode() -- Ativar o modo invenc√≠vel ao coletar itens

        -- Coletar blobs com nome "10"
        for _, blob in pairs(workspace.Blobs:GetChildren()) do
            if blob:IsA("Part") and blob.Name == "10" then
                local player = game.Players.LocalPlayer
                local character = player.Character
                local humanoidRootPart = character and character:FindFirstChild("HumanoidRootPart")

                if humanoidRootPart then
                    humanoidRootPart.CFrame = CFrame.new(blob.Position + Vector3.new(0, 5, 5)) -- Move o personagem para a posi√ß√£o do blob
                    wait(1) -- Aguarda 1 segundo ap√≥s mover
                end
            end
        end
        
        -- Coletar Giftboxes
        for _, giftbox in pairs(workspace:GetChildren()) do
            if giftbox:IsA("Part") and giftbox.Name == "Giftbox" then
                local player = game.Players.LocalPlayer
                local character = player.Character
                local humanoidRootPart = character and character:FindFirstChild("HumanoidRootPart")

                if humanoidRootPart then
                    humanoidRootPart.CFrame = CFrame.new(giftbox.Position + Vector3.new(0, 5, 5)) -- Move o personagem para a posi√ß√£o do giftbox
                    wait(1) -- Aguarda 1 segundo ap√≥s mover
                end
            end
        end
    end
    disableGodMode() -- Desativar o modo invenc√≠vel quando o Auto Collect n√£o estiver ativo
end

local ToggleCollectItems = Tabs.autofarms:AddToggle("Auto Collect Items", 
{
    Title = "Auto Farm, 
    Default = false, 
    Callback = function(state)
        autoCollectItems = state
        if autoCollectItems then
            moveToItems() -- Iniciar o movimento at√© os blobs e giftboxes
        end
    end 
})
