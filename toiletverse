local Tabs = {
    Tabinfo = Window:AddTab({ Title = "Tab Info" }),
    farm = Window:AddTab({ Title = "Auto Farm", Icon = "play" }),
    other = Window:AddTab({ Title = "Outros", Icon = "wrench" }),
}

-- Vari치vel para controlar o estado da coleta autom치tica de moedas
local autoCollectCoins = false
local collectingCoins = false -- Vari치vel para controlar se estamos coletando moedas

-- Fun칞칚o para teletransportar moedas para o jogador
local function teleportCoins()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    while collectingCoins do
        task.wait(0.1) -- Tempo entre as coletas (ajuste conforme necess치rio)

        for _, coin in pairs(workspace:GetChildren()) do
            if coin:IsA("Part") and coin.Name == "Coin" then -- Verifica se 칠 uma moeda
                coin.Position = humanoidRootPart.Position -- Teleporta a moeda para a posi칞칚o do jogador
            end
        end
    end
end

-- Alternador para ativar/desativar a coleta autom치tica de moedas
Tabs.farm:AddToggle("autoCollectCoins", 
{
    Title = "Auto Collect Coins e esmeraldas", 
    Description = "Ativa ou desativa a coleta autom치tica de moedas e esmeraldas.",
    Default = false, 
    Callback = function(state)
        autoCollectCoins = state
        if autoCollectCoins then
            collectingCoins = true -- Inicia a coleta de moedas
            print("Coleta autom치tica de moedas ativada")
            teleportCoins()
        else
            collectingCoins = false -- Para a coleta de moedas
            print("Coleta autom치tica de moedas desativada")
        end
    end 
})

