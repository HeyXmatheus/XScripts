-- Carregar biblioteca
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Aviso ao executar
Fluent:Notify({ Title = "Executado!", Content = "Executando com sucesso" })
Fluent:Notify({ Title = "Servidor XScripts oficial discord!", Content = "https://discord.gg/qsYR297DR2" })

local Window = Fluent:CreateWindow({
    Title = "XScript universal üî• | Vers√£o 1.0.0 ",
    TabWidth = 160, 
    Size = UDim2.fromOffset(580, 460), 
    Theme = "Amethyst"
})

local Tabs = {
    Tabinfo = Window:AddTab({ Title = "Tab Info" }),
    autoFarms = Window:AddTab({ Title = "Auto Farms", Icon = "farm" }), -- Renomeado para "Auto Farms"
}

-- Vari√°veis para controlar a coleta autom√°tica
local collectingCoins = false
local collectingHealingItems = false
local parasitarActive = false

-- Fun√ß√£o para teletransportar moedas para o jogador
local function teleportCoins()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    while collectingCoins do
        task.wait(0.1) -- Tempo entre as coletas

        for _, coin in pairs(workspace:GetChildren()) do
            if coin:IsA("Part") and coin.Name == "Coin" then -- Verifica se √© uma moeda
                coin.Position = humanoidRootPart.Position -- Teleporta a moeda para a posi√ß√£o do jogador
            end
        end
    end
end

-- Fun√ß√£o para teletransportar curativos para o jogador
local function teleportHealingItems()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    while collectingHealingItems do
        task.wait(0.1) -- Tempo entre as coletas

        for _, item in pairs(workspace:GetChildren()) do
            if item:IsA("Part") and item.Name == "HealingItem" then -- Verifica se √© um item de cura
                item.Position = humanoidRootPart.Position -- Teleporta o curativo para a posi√ß√£o do jogador
            end
        end
    end
end

-- Fun√ß√£o para ativar/desativar parasitar
local function toggleParasitar()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()

    while parasitarActive do
        task.wait(0.1) -- Tempo entre as ativa√ß√µes

        -- Implementa√ß√£o do parasitar (a l√≥gica exata depende de como o parasitar funciona no jogo)
        -- Aqui, voc√™ deve adicionar a l√≥gica para fazer o parasita "pegar" os inimigos ou algo similar
    end
end

-- Alternador para ativar/desativar a coleta autom√°tica de moedas
Tabs.autoFarms:AddToggle("autoCollectCoins", 
{
    Title = "Auto Collect Coins", 
    Description = "Ativa ou desativa a coleta autom√°tica de moedas.",
    Default = false, 
    Callback = function(state)
        collectingCoins = state
        if collectingCoins then
            print("Coleta autom√°tica de moedas ativada")
            teleportCoins()
        else
            print("Coleta autom√°tica de moedas desativada")
        end
    end 
})

-- Alternador para ativar/desativar a coleta autom√°tica de curativos
Tabs.autoFarms:AddToggle("autoCollectHealingItems", 
{
    Title = "Auto Collect Healing Items", 
    Description = "Ativa ou desativa a coleta autom√°tica de curativos.",
    Default = false, 
    Callback = function(state)
        collectingHealingItems = state
        if collectingHealingItems then
            print("Coleta autom√°tica de curativos ativada")
            teleportHealingItems()
        else
            print("Coleta autom√°tica de curativos desativada")
        end
    end 
})

-- Alternador para ativar/desativar o parasitar
Tabs.autoFarms:AddToggle("autoParasitar", 
{
    Title = "Auto Parasitar", 
    Description = "Ativa ou desativa a habilidade de parasitar inimigos.",
    Default = false, 
    Callback = function(state)
        parasitarActive = state
        if parasitarActive then
            print("Auto Parasitar ativado")
            toggleParasitar()
        else
            print("Auto Parasitar desativado")
        end
    end 
})

